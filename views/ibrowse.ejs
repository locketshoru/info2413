<!-- File Purpose: browse inventoriess page. -->

<%- include ('partials/header') %>

<p>
	This is where all of the inventories is loaded in and customers can add items to their cart. Available to everyone, but cart features only open to customers.
</p>

<% if (inventories.length > 0) { %>
<% inventories.forEach(function(inventory){ %> 
<div class="row my-3">
	<div class="card border-1 rounded-1">
		<div class="row">
			<div class="col-3">
				<img src="<%= inventory.image %>" style="width:100%;height:100%;max-width:250px;max-height:200px;"/>
			</div>
			<div class="col-7">
			  <div class="card-body">
			    <h5 class="card-title"><%= inventory.title %></h5>
			    <p class="card-text" style="font-size:0.8rem"><%= inventory.description %></p>
			  </div>
			</div>
			<div class="col-2 text-center h-100 py-3">
				<form action="/cart" method="POST" >
					<select class="form-select w-50 mx-auto" id="addtocart">
						<option selected value="0">0</option>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
					<button class="btn btn-outline-secondary" style="position: absolute;bottom: 1rem;right: 3%;" type="submit">Add to Cart</button>
				</form>
			</div>
		</div>
	</div>
</div>
<% }); %>

<% } else { %>
 	<p>
	 	There are no items here (yet).
	</p>
<% } %>

<%- include ('partials/footer') %>